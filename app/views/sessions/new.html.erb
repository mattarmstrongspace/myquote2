<!--creating a login page using bootstrap styling and rails forms -->

<% if flash[:error] %>
    <p class="error" style="color:red;"><%= flash[:error] %></p>
<% end %>

<p style="color: green"><%= notice %></p>

<!-- Login page header -->
<h2 class="fw-bold text-center mt-4 mb-3">Sign In</h2>

<!-- Login form -->
<%= form_tag login_path, method: :post, class: "mx-auto", style: "max-width: 400px;" do %>

  <div class="mb-3">
    <%= email_field_tag :email, nil, required: true, placeholder: 'Email Address', class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= password_field_tag :password, nil, required: true, placeholder: 'Password', class: 'form-control' %>
  </div>

  <div class="text-center">
    <%= submit_tag 'Login', class: 'btn btn-primary px-4' %>
  </div>

<% end %>