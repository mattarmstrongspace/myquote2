<p style="color: green"><%= notice %></p>

<% content_for :title, "Users" %>

<h3>Manage Users</h3>

<div id="users">
  <% @users.each do |user| %>
    <div class="user card mb-4">
      <div class="card-body">
        <p class="card-text"><span style="font-weight: bold;">First Name:</span> <%= user.fname %></p>
        <p class="card-text"><span style="font-weight: bold;">Last Name:</span> <%= user.lname %></p>
        <p class="card-text"><span style="font-weight: bold;">Email:</span> <%= user.email %></p>
        <p class="card-text"><span style="font-weight: bold;">Status:</span> <%= user.status %></p>
        <a href="<%= user_path(user) %>" class="btn btn-primary">Manage User</a>
      </div>
    </div>
    <!--
    <p>
      <%= link_to "Show this user", user %>
    </p>
    -->
  <% end %>
</div>

<% link_to "New user", new_user_path %>
