<!-- Form is connected to the User model, referencing its attributes and data -->
<%= form_with(model: user) do |form| %>

  <!-- Error display block showing any validation issues -->
  <% if user.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h5>
      <ul class="mb-0">
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Display user details; fields are read-only for admin -->
  <div class="mb-3">
    <%= form.text_field :fname, placeholder: 'First Name', class: 'form-control', readonly: (logged_in? && is_administrator?) %>
  </div>

  <div class="mb-3">
    <%= form.text_field :lname, placeholder: 'Last Name', class: 'form-control', readonly: (logged_in? && is_administrator?) %>
  </div>

  <div class="mb-3">
    <%= form.text_field :email, placeholder: 'Email Address', class: 'form-control', readonly: (logged_in? && is_administrator?) %>
  </div>

  <div class="mb-3">
    <%= form.password_field :password, placeholder: user.password_digest.present? ? 'Password set' : 'Choose a strong password', class: 'form-control', readonly: (logged_in? && is_administrator?) %>
  </div>

  <!-- Admin role checkbox; only visible to administrators -->
  <div class="mb-3">
    <% if logged_in? && is_administrator? %>
      <%= form.label :is_admin, "Admin Role", class: "form-label" %>
      <div class="form-check">
        <%= form.check_box :is_admin, class: "form-check-input", id: "admin-role" %>
        <%= label_tag "admin-role", "", class: "form-check-label" %>
      </div>
    <% else %>
      <!-- Hidden field for standard users -->
      <%= form.hidden_field :is_admin, value: false %>
    <% end %>
  </div>

  <!-- Status dropdown; only visible to administrators -->
  <div class="mb-3">
    <% if logged_in? && is_administrator? %>
      <%= form.label :status, "Account Status", class: "form-label" %>
      <%= form.select :status, ['Active', 'Suspended', 'Banned'], {}, class: 'form-select' %>
    <% elsif logged_in? && !is_administrator? %>
      <!-- Hidden field for standard users -->
      <%= form.hidden_field :status %>
    <% else %>
      <!-- Default status for new users -->
      <%= form.hidden_field :status, value: "Active" %>
    <% end %>
  </div>

  <!-- Submit button with dynamic label based on login state -->
  <div class="text-center mt-4">
    <% if logged_in? %>
      <%= form.submit 'Update', class: 'btn btn-primary px-4' %>
    <% else %>
      <%= form.submit 'Submit', class: 'btn btn-primary px-4' %>
    <% end %>
  </div>

<% end %>
